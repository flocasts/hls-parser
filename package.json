{
    "name": "@flocasts/hls-parser",
    "version": "1.2.3",
    "description": "A simple library to read/write HLS playlists",
    "main": "dist/index.js",
    "scripts": {
        "audit": "npm audit --audit-level high",
        "build": "rm -rf ./dist && tsc -p tsconfig.build.json",
        "format": "prettier --write \"src/**/*.ts\"",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "npx jest --ci",
        "coverage": "npx jest --ci --coverage"
    },
    "repository": {
        "url": "git+https://github.com/flocasts/hls-parser.git",
        "type": "git"
    },
    "publishConfig": {
        "@flocasts:registry": "https://npm.pkg.github.com"
    },
    "keywords": [
        "HLS",
        "media",
        "video",
        "audio",
        "streaming",
        "typescript"
    ],
    "author": "Kuu Miyazaki, Harold Waters, Andrew Bird",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/flocasts/hls-parser/issues"
    },
    "homepage": "https://github.com/flocasts/hls-parser#readme",
    "devDependencies": {
        "@types/jest": "^27.4.1",
        "@types/node": "^17.0.0",
        "@typescript-eslint/eslint-plugin": "^5.7.0",
        "@typescript-eslint/parser": "^5.7.0",
        "eslint": "^7.32.0",
        "eslint-config-prettier": "^8.3.0",
        "fast-deep-equal": "^3.1.3",
        "jest": "^27.5.1",
        "jest-extended": "^2.0.0",
        "prettier": "2.5.1",
        "ts-jest": "^27.1.3",
        "ts-node": "^10.5.0",
        "typescript": "^4.5.5"
    }
}
