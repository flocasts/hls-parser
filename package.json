{
  "name": "hls-parser",
  "version": "1.0.0",
  "description": "A simple library to read/write HLS playlists",
  "main": "dist/index.js",
  "browser": "dist/hls-parser.min.js",
  "scripts": {
    "audit": "npm audit --audit-level high",
    "coverage": "nyc npm test && nyc report --reporter=text-lcov | coveralls",
    "build": "rm -rf ./dist && tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "npm run lint && npm run build && npm run audit && ava --verbose"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/flocasts/hls-parser"
  },
  "keywords": [
    "HLS",
    "media",
    "video",
    "audio",
    "streaming",
    "typescript"
  ],
  "author": "Kuu Miyazaki & Harold Waters",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/flocasts/hls-parser/issues"
  },
  "homepage": "https://github.com/flocasts/hls-parser#readme",
  "devDependencies": {
    "@types/node": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "ava": "^3.15.0",
    "coveralls": "^3.1.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "nyc": "^15.1.0",
    "prettier": "2.5.1",
    "rewire": "^5.0.0",
    "typescript": "^4.5.4"
  }
}
